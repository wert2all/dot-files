{
  "autosave": "on_window_change",

  //buffer
  "buffer_font_family": "Maple Mono NF",
  "buffer_font_size": 18,
  "ui_font_size": 20,
  "ui_font_family": "CaskaydiaCove Nerd Font",
  "buffer_line_height": "comfortable",

  //agent buffer
  "agent_buffer_font_size": 20,
  "agent_ui_font_size": 20,

  //theme
  "icon_theme": "Warm Charmed Icons",
  "theme": "Aura Dark",
  "theme_overrides": {
    "Aura Dark": {
      "editor.document_highlight.read_background": "#00000000",
      "editor.document_highlight.write_background": "#00000000",
      "border.variant": "#15141C",
      "border": "#15141C",
      "title_bar.background": "#15141C",
      "panel.background": "#15141C",
      "panel.focused_border": "#4E466E",
      "players": [
        {
          "cursor": "#BD9DFF",
        },
      ],
      "syntax": {
        "comment": {
          "font_style": "italic",
        },
        "comment.doc": {
          "font_style": "italic",
        },
      },
    },
  },

  "title_bar": {
    "show_onboarding_banner": false,
    "show_project_items": false,
    "show_branch_name": false,
    "show_user_menu": false,
  },
  "tab_bar": {
    "show": false,
  },
  "toolbar": {
    "quick_actions": false,
  },
  "status_bar": {
    "experimental.show": false,
  },
  "project_panel": {
    "dock": "left",
    "default_width": 400,
    "hide_root": false,
    "auto_fold_dirs": false,
    "starts_open": false,
    "git_status": true,
    "sticky_scroll": true,
    "scrollbar": {
      "show": "never",
    },
    "indent_guides": {
      "show": "never",
    },
  },
  "outline_panel": {
    "default_width": 400,
    "indent_guides": {
      "show": "never",
    },
  },
  "file_finder": {
    "modal_max_width": "large",
  },
  "scrollbar": {
    "show": "never",
  },
  "gutter": {
    "min_line_number_digits": 0,
    "folds": false,
    "runnables": false,
  },
  "indent_guides": {
    "enabled": false,
  },

  "cursor_shape": "block",
  "cursor_blink": false,
  "selection_highlight": false,
  "seed_search_query_from_cursor": "never",
  "show_whitespaces": "none",
  // "drag_and_drop_selection": {
  //   "enabled": false,
  // },
  // "current_line_highlight": "none",
  // "tab_size": 2,
  // "auto_indent": false,
  // "auto_indent_on_paste": false,
  // "show_completions_on_input": false,
  // "show_completion_documentation": false,
  // "inline_code_actions": false,
  // "lsp_document_colors": "none",
  // "hover_popover_enabled": false,
  // "format_on_save": "on",

  // "extend_comment_on_newline": false,
  // "horizontal_scroll_margin": 1,
  // "vertical_scroll_margin": 1,

  "centered_layout": {
    "right_padding": 0.15,
    "left_padding": 0.15,
  },

  "git": {
    "inline_blame": {
      "enabled": false,
    },
  },

  "session": {
    "restore_unsaved_buffers": false,
  },

  "vim_mode": false,
  "auto_update": false,
  "when_closing_with_no_tabs": "keep_window_open",
  "extend_comment_on_newline": false,
  "close_on_file_delete": true,
  "restore_on_file_reopen": false,
  "restore_on_startup": "empty_tab",

  "telemetry": {
    "diagnostics": true,
    "metrics": false,
  },
}
